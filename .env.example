# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# SMS Configuration (Algerian Providers)
SMS_PROVIDER=mobilis
MOBILIS_API_URL=https://api.mobilis.dz/sms
MOBILIS_API_KEY=your-mobilis-api-key
DJEZZY_API_URL=https://api.djezzy.dz/sms
DJEZZY_API_KEY=your-djezzy-api-key
OOREDOO_API_URL=https://api.ooredoo.dz/sms
OOREDOO_API_KEY=your-ooredoo-api-key

# Payment Gateway Configuration
BARIDIMOB_API_URL=https://api.baridimob.dz
BARIDIMOB_MERCHANT_ID=your-merchant-id
BARIDIMOB_API_KEY=your-baridimob-key
CIB_PAYMENT_URL=https://payment.cib.dz
CIB_MERCHANT_ID=your-cib-merchant-id
CIB_API_KEY=your-cib-api-key

# Redis Cache
REDIS_URL=redis://localhost:6379

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Development
NODE_ENV=development